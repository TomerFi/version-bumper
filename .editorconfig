# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[**.{yaml,yml}]
indent_style = space
indent_size = 2
max_line_length = 100
trim_trailing_whitespace = true

[**.md]
max_line_length = 120
trim_trailing_whitespace = false

[**.{sh,bash,zsh,csh,ksh,fish}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[Makefile*]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
